{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "ES2022" ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true
  },

  "include": [
    "types/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "test/**/*.js",
    "eslint.config.mjs"
  ],

  "typedocOptions": {
    "name": "Tedious",
    "out": "./docs",
    "entryPoints": ["./src/tedious.ts"]
  }
}
